{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build/types",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "include": [
    "cypress/**/*.ts",
    "src/**/**/*.ts",
    "scripts/*.ts",
     "./declaration.d.ts",
    "./*.ts"
  ],
  "exclude": [
    "src/**/*.d.ts",
    "scripts/*.mjs",
    "node_modules/**",
    "node_modules/@types/node/globals.d.ts",
    "node_modules/typescript/lib/lib.dom.d.ts",
    "node_modules/cypress/types/jquery/misc.d.ts",
    "src/components/**/demos/side-by-side.ts",
    "build/types",
    "dist",
    "aws",
    "scripts/*.js"
  ],
  "types": [
    "@types/jest",
    "@types/puppeteer",
    "@types/jest-axe",
    "cypress",
    "cypress-axe"
  ]
}
